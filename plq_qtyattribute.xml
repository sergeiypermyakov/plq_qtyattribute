<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="jshoppingproducts" method="upgrade">
<!--Имя плагина которое отображается в расширениях -->
    <name>joomshop_qtyattribute</name>
<!--Дата создания плагина-->
    <creationDate>2021-07-06</creationDate>
<!--Автор плагина--> 
    <author>sergeiy</author>
<!--Почта автора-->  
    <authorEmail>sergeiy.permyakov@gmail.com</authorEmail>
<!--Сайт автора-->       
    <authorUrl>https://</authorUrl>
<!--Копирайт-->  
    <copyright>Copyright (C) joomshop plq_qtyattribute 2021 </copyright>
<!--Лицензия-->      
    <license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL</license>
<!--Версия плагина-->    
    <version>1.0</version>
<!--Описание плагина-->  
    <description>Плагин Joomshop plq_qtyattribute это плагин отображения остатков атрибутов custom.</description>
<!--Файлы которые нужно установить где plg_joomshop_attr_in_cart.php это папка куда нужно установить название должно совпадать с названием плагина -->
    <files>
       <filename plugin="plq_qtyattribute">plq_qtyattribute.php</filename>
       <filename>index.html</filename>
    </files>
 
<!--Языковые файлы сайта-->  
        <languages>
           <language tag="ru-RU">language/ru-RU/ru-RU.plq_qtyattribute.ini</language>
		   <language tag="ru-RU">language/ru-RU/ru-RU.plq_qtyattribute.sys.ini</language>
        </languages>
 
 
<!--Конфигурация, такие параметры как default="1" задают установку этих значений по умолчанию когда их установили-->         
    <config>
        <fields name="params">
 
            <fieldset name="basic">
                <field name="view of attr" type="list"
                    default="1"
                    label="PLG_JOOMSHOP_ATTR_VIEW">
                    <option value="0">PLG_JOOMSHOP_plq_qtyattribute_ALL_ATTR</option>
                    <option value="1">PLG_JOOMSHOP_plq_qtyattribute_LIST_ATTR</option>
                </field>
                            
            </fieldset>       
        </fields> 
    </config>     
</extension>